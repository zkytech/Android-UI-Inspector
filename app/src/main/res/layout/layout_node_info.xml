<?xml version="1.0" encoding="utf-8"?>
<com.zkytech.uiinspector.MaxWidthLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_floating_window"
    android:orientation="vertical"
    android:padding="0dp"
    android:elevation="8dp">

    <!-- Header / Drag Handle -->
    <LinearLayout
        android:id="@+id/iv_drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_floating_window"
        android:padding="12dp"
        android:gravity="center_vertical">
        
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ui_inspector_icon"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Element Inspector"
            android:textColor="@color/element_text_main"
            android:textStyle="bold"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btn_close_inspector"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/element_text_secondary"
            android:contentDescription="Close"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/element_border_lighter"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="250dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tl_node_properties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" />

            <LinearLayout
                android:id="@+id/ll_children_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_children_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Children (0)"
                    android:textStyle="bold"
                    android:textColor="@color/element_text_main"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_children_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_down"
                    android:contentDescription="Expand" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_children_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/element_border_lighter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="12dp">

        <Button
            android:id="@+id/btn_parent"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Parent"
            android:background="@drawable/bg_button_secondary"
            android:textColor="@color/element_text_regular"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:paddingHorizontal="12dp"
            android:stateListAnimator="@null"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"/>

    </LinearLayout>

</com.zkytech.uiinspector.MaxWidthLinearLayout>